{% extends 'layouts/base.html.twig' %}
{% block title 'Change password' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center">Change password</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary btn-lg btn-block">Update</button>
            {{ form_end(form) }}
            {#
            si on a plusieurs champs a afficher en utilise form_rest
                        {{ form_rest(form.email) }}
            #}
        </div>
    </div>
{% endblock %}
