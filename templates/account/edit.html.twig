{% extends 'layouts/base.html.twig' %}
{% block title 'Edit user account' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center">Update profile</h1>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.lastName) }}
                </div>
            </div>
            {{ form_row(form.email) }}

            {#
            si on a plusieurs champs a afficher en utilise form_rest
                        {{ form_rest(form.email) }}
            #}

            <input type="submit" value="Apply changes" class="btn btn-primary btn-block" formnovalidate/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
